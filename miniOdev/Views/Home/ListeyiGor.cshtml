@using miniOdev.Languages
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Lang> _stringLocalizer;

@{
    ViewData["Title"] = @_stringLocalizer["page.SeeList"];
}
@model List<ListeyiGorViewModel>

<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 mt-5"> 
        <div class="table-responsive">
            <table id="myTable" class="table table-hover" >
                <thead>
                    <tr>
                        <th>#</th>
                        <th>@_stringLocalizer["page.Name"]</th>
                        <th>@_stringLocalizer["page.SurName"]</th>
                        <th>@_stringLocalizer["page.Gender"]</th>
                        <th>@_stringLocalizer["page.BloodGroup"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Ad</td>
                            <td>@item.Soyad</td>
                            <td>@item.Cinsiyet</td>
                            <td>@item.KanGrubu</td>
                        </tr>
                    }
        
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-2"></div>
</div>
@section Scripts {
   <script>
       var table = $('#myTable').DataTable({
                    "bDestroy": true,   
                    columns: [
                        { "data": "Id" },
                        { "data": "Ad" },
                        { "data": "Soyad" },
                        { "data": "Cinsiyet" },
                        { "data": "KanGrubu" }
                    ],
                    dom: 'B<"clear">lfrtip',
                    buttons: [   {
                        extend: 'excelHtml5',
                        title: 'Hasta_Bilgileri'
                    },'copy' ],
                    rowId: 'id',
                    scrollY: '400px',
                    scrollCollapse: true,
                });

                
    </script>
}

                        